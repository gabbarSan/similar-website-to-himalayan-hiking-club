<div id="carouselIndicator" class="carousel slide">
    <div class="carousel-indicators">
        {%- for image in galleryImages -%}  
            {% if loop.index == 1 %}     
                <button type="button" data-bs-target="#carouselIndicator" data-bs-slide-to="{{loop.index - 1}}" class="active" aria-current="true" aria-label="Slide {{loop.index}}"></button>
            {% else %}
                <button type="button" data-bs-target="#carouselIndicator" data-bs-slide-to="{{loop.index - 1}}" aria-label="Slide {{loop.index}}"></button>
            {% endif %}
        {%- endfor -%}
    </div>
    <div class="carousel-inner">
        {%- for image in galleryImages -%}  
            {% if loop.index == 1 %}
            <div class="carousel-item active">
                <img src="{{image.src}}" class="d-block w-100" alt="{{image.alt}}">
            </div>
            {% else %}
                <div class="carousel-item">
                    <img src="{{image.src}}" class="d-block w-100" alt="{{image.alt}}">
                </div>
            {% endif %}
        {%- endfor -%}
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselIndicator" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselIndicator" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  